{% extends 'layout/main.html.twig' %}

{% block title %}Update User{% endblock %}

{% block content %}
    <form id="actor-form" action="{{ GLOBALS.site_url }}/user/update{% if user_id %}/{{user_id}}{% endif %}" method="POST" autocomplete="off">

        <legend class="">Update User</legend>

        {% if errors is defined %}
            <div class="alert alert-danger" role="alert">
                {% for error in errors %}
                    {{error}}
                {% endfor %}
            </div>
        {% endif %}

        {% if error is defined %}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
        {% endif %}

        <div class="form-group">
            <label for="name">First Name</label>
            <input type="text" class="form-control" name="first_name" value="{{form.get('first_name')}}" aria-describedby="first_name" placeholder="John">
        </div>
        <div class="form-group">
            <label for="name">Last Name</label>
            <input type="text" class="form-control" name="last_name" value="{{form.get('last_name')}}" aria-describedby="last_name" placeholder="Doe">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Confirm Password</label>
            <input type="password" name="password_confirm" class="form-control" id="passwordConfirm" placeholder="Password">
        </div>
        <button type="submit" name="action" value="save" class="btn btn-primary">Update</button>
    </form>

{% endblock %}
